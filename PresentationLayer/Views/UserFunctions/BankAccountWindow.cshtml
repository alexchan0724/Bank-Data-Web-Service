@{
    ViewData["Title"] = "BankAccountWindow";
    string message = ViewBag.message;
    string error = ViewBag.Error;
}
<style>
    * {
        box-sizing: border-box;
    }

    #CreateUserForm {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh; /* Adjust height to vertically center */
    }

    .horizontal-layout {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 100px; /* Add some space between form fields and image selection */
    }

    .form-section, .image-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 200px;
    }

    input {
        margin-bottom: 10px;
        width: 300px;
        padding: 5px;
    }
</style>



<h2>Bank Account Number</h2>
<h2>Bank Account Information</h2>
<p>Account Number: @ViewBag.account.accountNumber</p>
<p>PIN: @ViewBag.account.pin</p>
<p>current balance: @ViewBag.account.balance</p>
<p>Email: @ViewBag.account.email</p>
<p>User Name: @ViewBag.user.username</p>

<div class="form-selection">
    <form action="/Home/BankAccountWindow/Deposit" method="post">
        <input type="hidden" name="username" value="@ViewBag.user.username" />
        <input type="hidden" name="password" value="@ViewBag.user.password" />

        <input type="hidden" name="oldbalance" value="@ViewBag.account.balance" />
        <input type="hidden" name="accNo" value="@ViewBag.account.accountNumber" />
        <input type="text" id="description" name="description" placeholder="description" />
        <input type="text" id="newBalance" name="newBalance" placeholder="Change Balance" />
        <input type="submit" value="Change Account" />
    </form>
</div>





