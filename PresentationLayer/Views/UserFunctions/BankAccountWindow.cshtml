@{
    ViewData["Title"] = "BankAccountWindow";
    string message = ViewBag.message;
    string error = ViewBag.Error;
}
<style>
    * {
        box-sizing: border-box;
    }

    #CreateUserForm {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh; /* Adjust height to vertically center */
    }

    .horizontal-layout {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 100px; /* Add some space between form fields and image selection */
    }

    .form-section, .image-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 200px;
    }

    input {
        margin-bottom: 10px;
        width: 300px;
        padding: 5px;
    }
</style>

<h2>Bank Account Number</h2>
<h2>Bank Account Information</h2>
<p>Account Number: @ViewBag.account.accountNumber</p>
<p>PIN: @ViewBag.account.pin</p>
<p>current balance: @ViewBag.account.balance</p>
<p>Email: @ViewBag.account.email</p>
<p>User Name: @ViewBag.user.username</p>

<div class="form-selection">
    <input type="hidden" name="username" value="@ViewBag.account.username" />
    <input type="hidden" name="oldbalance" value="@ViewBag.account.balance" />
    <input type="hidden" name="accNo" value="@ViewBag.account.accountNumber" />
    <input type="hidden" name="pin" value="@ViewBag.account.pin" />
    <input type="hidden" name="email" value="@ViewBag.account.email" />
    <input type="hidden" name="description" value="@ViewBag.account.description" />

    <!-- <input type="hidden" name="password" value="@ViewBag.user.password" /> -->

    <input type="text" id="amount" name="amount" placeholder="Amount" />
    <input type="text" id="description" name="description" placeholder="Transfer Description" />
    <input type="text" id="transferAcctNum" name="transferAcctNum" placeholder="Receiver Account Number" />
    <button type="button" id="transferMoney" onclick="transfer()">Transfer</button>
</div>
