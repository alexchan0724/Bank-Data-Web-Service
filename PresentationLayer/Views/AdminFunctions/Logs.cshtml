@using API_Classes
@model List<LogDataIntermed>
@{
    ViewData["Title"] = "LogWindow";
    string message = ViewBag.message;
    string error = ViewBag.Error;
}
<style>
    * {
        box-sizing: border-box;
    }

    #CreateUserForm {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh; /* Adjust height to vertically center */
    }

    .horizontal-layout {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 100px; /* Add some space between form fields and image selection */
    }

    .form-section, .image-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 200px;
    }

    input {
        margin-bottom: 10px;
        width: 300px;
        padding: 5px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Audit Page</h1>
    @if (ViewBag.LogEntries != null)
    {
        <ul>
            <br />
            @foreach (var log in ViewBag.LogEntries)
            {
                <li>
                    -----------------------------------------------------------------------------<br />
                    LogID: @log.logID<br />
                    Log Description: @log.logDescription<br />
                    Log Date: @log.logDate.ToString("g")<br />
                    -----------------------------------------------------------------------------<br />

                </li>
            }
        </ul>
    }
    else
    {
        <p>No log entries exist.</p>
    }
</div>

